@model List<Solutions>
@{
    ViewData["Title"] = "Homepage";
}
<table style=" box-shadow:4px 4px 4px 4px black;text-align:center;word-wrap:break-word;width: 100%;border-style:none; color:white;background-color:black; font-weight:bold; padding:5px 5px;">
    <tr style="padding: 4px 4px; background-color:darkblue; border-style:solid;border-color:white;">
